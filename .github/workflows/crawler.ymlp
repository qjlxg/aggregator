name: Clash Test

on:
  workflow_dispatch:  # 支持手动触发
  push:
    branches:
      - main  # 推送代码时自动触发（可选）

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Run Clash Test Script
        run: bash scripts/clash_test.sh
